{% extends 'base.html.twig' %}

{% block body %} {# modèle body <body>#}

    <div class="row" id="register" class="">
        <div class="col s12 m6 offset-m3 l6 offset-l3">
            {{ form_start(form) }} {# modèle balise <form>#}
            <div class="card hoverable">
                <div class="card-content">
                    <span class="card-title">Inscription</span>
                    <div class="input-field">
                        {{ form_row(form.firstname) }}
                    </div>
                    <div class="input-field">
                        {{ form_row(form.lastname) }}
                    </div>
                    <div class="input-field">
                        {{ form_row(form.username) }}
                    </div>
                    <div class="input-field">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="input-field">
                        {{ form_row(form.plainPassword.first) }}
                    </div>
                    <div class="input-field">
                        {{ form_row(form.plainPassword.second) }}
                    </div>
                </div>
                <div class="card-action center">
                    <button class="btn waves-effect white  blue-grey-text" type="submit" name="action">
                        S'inscrire<i class="material-icons right">send</i>
                    </button>
                </div>
            </div>
            {{ form_end(form) }}{# modèle balise </form>#}
        </div>
    </div>


{% endblock body %} {# modèle body </body>#}
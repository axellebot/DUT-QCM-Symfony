{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col s12 m6 offset-m3 l6 offset-l3">
            <div class="card hoverable">
                <div class="card-content">
                    <span class="card-title">Liste des Utilisateurs</span>
                    <ul class="collection ">
                        {% for user in users %}
                            <!-- Modal Structure -->
                            <div id="modal_{{ user.id }}" class="modal">
                                <div class="modal-content">
                                    <a href="#" class="btn-floating right modal-close waves-effect waves-light black"><i class="material-icons">close</i></a>
                                    <h4 class="center">{{ user.username }}</h4>
                                    <p class="flow-text">
                                        <b>Id :</b> {{ user.id }}<br/>
                                        <b>Pr√©nom :</b> {{ user.firstname }}<br/>
                                        <b>Nom :</b> {{ user.lastname }}<br/>
                                        <b>Pseudo :</b> {{ user.username }}<br/>
                                        <b>Email :</b> {{ user.email }}<br/>
                                        <b>Role :</b> {{ user.role }}
                                    </p>
                                </div>
                                <div class="modal-footer center">
                                    <div class="right"><a href="/admin/user/{{ user.id }}/delete" class="btn waves-effect waves-light red"><i class="material-icons left">delete</i>Supprimer</a></div>
                                    <div class="left"><a href="/admin/user/{{ user.id }}/delete" class="btn waves-effect waves-green blue-grey"><i class="material-icons right">edit</i>Modifier</a></div>
                                </div>
                            </div>

                            <li class="collection-item">
                                <div>{{ user.username }}
                                    <a href="/admin/user/{{ user.id }}/delete" class="secondary-content tooltipped" data-position="right"
                                       data-delay="50" data-tooltip="Supprimer">
                                        <i class="material-icons red-text">delete</i>
                                    </a>
                                    <a href="/admin/user/{{ user.id }}/delete" class="secondary-content tooltipped" data-position="top"
                                       data-delay="50" data-tooltip="Modifier">
                                        <i class="material-icons light-blue-text">mode_edit</i>
                                    </a>
                                    <a href="#modal_{{ user.id }}" class="secondary-content tooltipped modal-trigger" data-position="left"
                                       data-delay="50" data-tooltip="Voir">
                                        <i class="material-icons light-blue-text">visibility</i>
                                    </a>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}

{% block javascripts %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('.tooltipped').tooltip({delay: 50});
            // the "href" attribute of .modal-trigger must specify the modal ID that wants to be triggered
            $('.modal-trigger').leanModal();
        })
    </script>
{% endblock javascripts %}

